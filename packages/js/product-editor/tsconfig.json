{
	"extends": "../tsconfig",
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "build-module",
		"declaration": true,
		"declarationMap": true,
		"declarationDir": "./build-types",
		"jsx": "preserve",
		"resolveJsonModule": true,
		"typeRoots": [
			"./typings",
			"./node_modules/@types"
		]
	},
	"include": [
		"**/*.d.ts",
		"src/**/*",
		"src/**/*.json"
	]
}
